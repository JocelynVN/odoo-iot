	<record id="iot_box_device_view_tree" model="ir.ui.view">
		<field name="name">viin.iot.device.view.tree</field>
		<field name="model">viin.iot.device</field>
		<field name="arch" type="xml">
			<tree create="false" edit="false"
				default_order="iot_box_box_id desc"
				decoration-success="connected==True"
				decoration-muted="connected==False" sample="1">
				<field name="name" />
				<field name="reminiscent_name" />
				<field name="identifier" />
				<field name="iot_box_box_id" />
				<field name="connection_type" />
				<field name="connected" column_invisible="True" />
			</tree>
		</field>
	</record>

